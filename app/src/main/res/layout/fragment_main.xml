<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BothMatch"
    tools:context=".fragments.recipe.ShowRecipeFragment">

    <android.support.constraint.ConstraintLayout
        style="@style/WidthMatch">

        <android.support.v7.widget.CardView
            style="@style/CvHeader"
            android:id="@+id/cv_day_hd"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <android.support.constraint.ConstraintLayout
                style="@style/ClHeader">

                <TextView
                    style="@style/TvHeader"
                    android:id="@+id/tv_day"
                    android:text="@string/tv_day"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iv_day"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    style="@style/IvHeader"
                    android:id="@+id/iv_day"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_day"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_day"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CvData"
            android:id="@+id/cv_day"
            app:layout_constraintTop_toBottomOf="@+id/cv_day_hd"
            app:layout_constraintStart_toStartOf="parent">

            <android.support.constraint.ConstraintLayout
                style="@style/ClData">

                <android.support.v7.widget.RecyclerView
                    style="@style/RvDefault"
                    android:id="@+id/rv_day"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CvHeader"
            android:id="@+id/cv_recent_hd"
            app:layout_constraintTop_toBottomOf="@+id/cv_day"
            app:layout_constraintStart_toStartOf="parent">

            <android.support.constraint.ConstraintLayout
                style="@style/ClHeader">

                <TextView
                    style="@style/TvHeader"
                    android:id="@+id/tv_recent"
                    android:text="@string/tv_recent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iv_recent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    style="@style/IvHeader"
                    android:id="@+id/iv_recent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_recent"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_recent"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CvData"
            android:id="@+id/cv_recent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_recent_hd"
            app:layout_constraintBottom_toBottomOf="parent">

            <android.support.constraint.ConstraintLayout
                style="@style/ClData">

                <android.support.v7.widget.RecyclerView
                    style="@style/RvDefault"
                    android:id="@+id/rv_recent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
</ScrollView>