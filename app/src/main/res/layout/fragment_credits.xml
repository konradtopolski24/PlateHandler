<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BothMatch"
    tools:context=".fragments.credits.CreditsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/ClMain">

        <androidx.cardview.widget.CardView
            style="@style/CvHeader"
            android:id="@+id/cv_hd_author"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/ClData">

                <ImageView
                    style="@style/IvTutorial"
                    android:id="@+id/iv_tt_author"
                    android:contentDescription="@string/dp_tutorial"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_hd_author"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_hd_author" />

                <TextView
                    style="@style/TvHeader"
                    android:id="@+id/tv_hd_author"
                    android:text="@string/hd_cd_author"
                    app:layout_constraintStart_toEndOf="@+id/iv_tt_author"
                    app:layout_constraintEnd_toStartOf="@+id/iv_hd_author"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    style="@style/IvHeader"
                    android:id="@+id/iv_hd_author"
                    android:contentDescription="@string/dp_expand"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_hd_author"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_hd_author" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CvData"
            android:id="@+id/cv_author"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_hd_author">

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/ClData">

                <ImageView
                    style="@style/IvInfoCredits"
                    android:id="@+id/iv_ct_developer"
                    android:contentDescription="@string/dp_caption"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_ct_developer"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/TvCaption"
                    android:id="@+id/tv_ct_developer"
                    android:text="@string/ct_developer"
                    app:layout_constraintStart_toEndOf="@+id/iv_ct_developer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_ct_developer"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_ct_developer"
                    app:layout_constraintHorizontal_weight="1" />

                <TextView
                    style="@style/TvPrimary"
                    android:id="@+id/tv_developer"
                    app:layout_constraintStart_toStartOf="@+id/tv_ct_developer"
                    app:layout_constraintEnd_toEndOf="@+id/tv_ct_developer"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ct_developer" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CvHeader"
            android:id="@+id/cv_hd_library"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_author">

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/ClData">

                <ImageView
                    style="@style/IvTutorial"
                    android:id="@+id/iv_tt_library"
                    android:contentDescription="@string/dp_tutorial"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_hd_library"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_hd_library" />

                <TextView
                    style="@style/TvHeader"
                    android:id="@+id/tv_hd_library"
                    android:text="@string/hd_cd_library"
                    app:layout_constraintStart_toEndOf="@+id/iv_tt_library"
                    app:layout_constraintEnd_toStartOf="@+id/iv_hd_library"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    style="@style/IvHeader"
                    android:id="@+id/iv_hd_library"
                    android:contentDescription="@string/dp_expand"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_hd_library"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_hd_library" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CvData"
            android:id="@+id/cv_library"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_hd_library">

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/ClRv">

                <androidx.recyclerview.widget.RecyclerView
                    style="@style/WidthMatch"
                    android:id="@+id/rv_library"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CvHeader"
            android:id="@+id/cv_hd_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_library">

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/ClData">

                <ImageView
                    style="@style/IvTutorial"
                    android:id="@+id/iv_tt_icon"
                    android:contentDescription="@string/dp_tutorial"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_hd_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_hd_icon" />

                <TextView
                    style="@style/TvHeader"
                    android:id="@+id/tv_hd_icon"
                    android:text="@string/hd_cd_icon"
                    app:layout_constraintStart_toEndOf="@+id/iv_tt_icon"
                    app:layout_constraintEnd_toStartOf="@+id/iv_hd_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    style="@style/IvHeader"
                    android:id="@+id/iv_hd_icon"
                    android:contentDescription="@string/dp_expand"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_hd_icon"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_hd_icon" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CvData"
            android:id="@+id/cv_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_hd_icon">

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/ClRv">

                <androidx.recyclerview.widget.RecyclerView
                    style="@style/WidthMatch"
                    android:id="@+id/rv_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>