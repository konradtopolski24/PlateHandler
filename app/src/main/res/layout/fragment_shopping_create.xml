<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BothMatch"
    tools:context=".fragments.shopping.ShoppingCreateFragment">

    <androidx.core.widget.NestedScrollView
        style="@style/BothMatch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/WidthMatch">

            <androidx.cardview.widget.CardView
                style="@style/CvHeader"
                android:id="@+id/cv_hd_add"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/ClData">

                    <ImageView
                        style="@style/IvTutorial"
                        android:id="@+id/iv_tt_add"
                        android:contentDescription="@string/dp_tutorial"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_add"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_add" />

                    <TextView
                        style="@style/TvHeader"
                        android:id="@+id/tv_add"
                        android:text="@string/hd_sh_item"
                        app:layout_constraintStart_toEndOf="@+id/iv_tt_add"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/CvData"
                android:id="@+id/cv_add"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_hd_add">

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/ClData">

                    <Button
                        style="@style/BtAlone"
                        android:id="@+id/bt_add"
                        android:text="@string/bt_item"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/bt_select"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_weight="1" />

                    <Button
                        style="@style/BtAlone"
                        android:id="@+id/bt_select"
                        android:text="@string/bt_recipe"
                        app:layout_constraintStart_toEndOf="@+id/bt_add"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_weight="1" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/CvHeader"
                android:id="@+id/cv_hd_list"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_add">

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/ClData">

                    <ImageView
                        style="@style/IvTutorial"
                        android:id="@+id/iv_tt_list"
                        android:contentDescription="@string/dp_tutorial"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_list"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_list" />

                    <TextView
                        style="@style/TvHeader"
                        android:id="@+id/tv_list"
                        android:text="@string/hd_sh_list"
                        app:layout_constraintStart_toEndOf="@+id/iv_tt_list"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/CvFab"
                android:id="@+id/cv_list"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_hd_list"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/ClRv">

                    <androidx.recyclerview.widget.RecyclerView
                        style="@style/WidthMatch"
                        android:id="@+id/rv_positions"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        style="@style/FabDefault"
        android:id="@+id/fab_finished"
        android:src="@drawable/ic_ot_finished"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>