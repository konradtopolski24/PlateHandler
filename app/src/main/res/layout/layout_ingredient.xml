<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CvIngredient">

    <android.support.constraint.ConstraintLayout
        style="@style/ClIngredient">

        <LinearLayout
            style="@style/LlSide"
            android:id="@+id/ll_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                style="@style/IvSide"
                android:id="@+id/iv_icon"/>
        </LinearLayout>

        <TextView
            style="@style/TvIngredient"
            android:id="@+id/tv_product"
            app:layout_constraintStart_toEndOf="@+id/ll_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            style="@style/IvIngredient"
            android:id="@+id/iv_measure"
            android:src="@drawable/ic_ot_amount"
            app:layout_constraintStart_toEndOf="@+id/ll_icon"
            app:layout_constraintTop_toBottomOf="@+id/tv_product"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            style="@style/TvMeasure"
            android:id="@+id/tv_measure"
            app:layout_constraintStart_toEndOf="@+id/iv_measure"
            app:layout_constraintEnd_toEndOf="@+id/tv_product"
            app:layout_constraintTop_toTopOf="@+id/iv_measure"
            app:layout_constraintBottom_toBottomOf="@+id/iv_measure"/>

        <CheckBox
            style="@style/CbDone"
            android:id="@+id/cb_done"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            style="@style/TvUsed"
            android:id="@+id/tv_used"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>