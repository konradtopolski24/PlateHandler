<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.product.ManageProductFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Photo -->

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/iv_photo_desc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/ib_add"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/ib_add_desc"
                app:layout_constraintStart_toEndOf="@+id/iv_photo"
                app:layout_constraintTop_toTopOf="@+id/iv_photo"
                app:layout_constraintBottom_toBottomOf="@+id/iv_photo" />

            <ImageButton
                android:id="@+id/ib_remove"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/ib_remove_desc"
                app:layout_constraintStart_toEndOf="@+id/ib_add"
                app:layout_constraintTop_toTopOf="@+id/iv_photo"
                app:layout_constraintBottom_toBottomOf="@+id/iv_photo"/>

            <!-- Name -->

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tl_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_photo">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/et_name"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <!-- Type -->

            <TextView
                android:id="@+id/tv_type_hd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tl_name" />

            <Spinner
                android:id="@+id/sp_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/ar_product_type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_type_hd" />

            <!-- Carbohydrates -->

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tl_carbohydrates"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sp_type">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_carbohydrates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/et_carbohydrates"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <!-- Protein -->

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tl_protein"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tl_carbohydrates">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_protein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/et_protein"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <!-- Fat -->

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tl_fat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tl_protein">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_fat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/et_fat"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>