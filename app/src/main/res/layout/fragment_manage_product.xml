<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BothMatch"
    tools:context=".fragments.product.ManageProductFragment">

    <ScrollView
        style="@style/BothMatch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout
            style="@style/WidthMatch">

            <android.support.v7.widget.CardView
                style="@style/CvHeader"
                android:id="@+id/cv_photo_hd"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <android.support.constraint.ConstraintLayout
                    style="@style/ClData">

                    <TextView
                        style="@style/TvHeader"
                        android:id="@+id/tv_photo"
                        android:text="@string/hd_pd_photo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/CvData"
                android:id="@+id/cv_photo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_photo_hd">

                <android.support.constraint.ConstraintLayout
                    style="@style/ClData">

                    <ImageView
                        style="@style/IvPhoto"
                        android:id="@+id/iv_photo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        style="@style/IbDefault"
                        android:id="@+id/ib_add"
                        android:src="@drawable/ic_ot_photo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_photo" />

                    <ImageButton
                        style="@style/IbDefault"
                        android:id="@+id/ib_remove"
                        android:src="@drawable/ic_st_remove"
                        app:layout_constraintStart_toEndOf="@+id/ib_add"
                        app:layout_constraintTop_toBottomOf="@+id/iv_photo"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/CvHeader"
                android:id="@+id/cv_name_hd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_photo">

                <android.support.constraint.ConstraintLayout
                    style="@style/ClData">

                    <TextView
                        style="@style/TvHeader"
                        android:id="@+id/tv_name"
                        android:text="@string/hd_pd_name"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/CvData"
                android:id="@+id/cv_name"
                app:layout_constraintTop_toBottomOf="@+id/cv_name_hd"
                app:layout_constraintStart_toStartOf="parent">

                <android.support.constraint.ConstraintLayout
                    style="@style/ClData">

                    <android.support.design.widget.TextInputLayout
                        style="@style/TilDefault"
                        android:id="@+id/til_name"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <android.support.design.widget.TextInputEditText
                            style="@style/EtDefault"
                            android:id="@+id/et_name"
                            android:hint="@string/ct_name"/>
                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        style="@style/IvInfoProduct"
                        android:id="@+id/iv_type"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tv_type_hd"
                        app:layout_constraintTop_toBottomOf="@+id/til_name"/>

                    <TextView
                        style="@style/TvInfo"
                        android:id="@+id/tv_type_hd"
                        android:text="@string/ct_type"
                        app:layout_constraintStart_toEndOf="@+id/iv_type"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/iv_type"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_type"
                        app:layout_constraintHorizontal_weight="1"/>

                    <Spinner
                        style="@style/BothWrap"
                        android:id="@+id/sp_type"
                        android:entries="@array/tx_product"
                        app:layout_constraintStart_toStartOf="@+id/tv_type_hd"
                        app:layout_constraintTop_toTopOf="@+id/iv_type_dw"
                        app:layout_constraintBottom_toBottomOf="@+id/iv_type_dw" />

                    <ImageView
                        style="@style/IvInfoProduct"
                        android:id="@+id/iv_type_dw"
                        app:layout_constraintStart_toEndOf="@+id/sp_type"
                        app:layout_constraintTop_toBottomOf="@+id/tv_type_hd"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/CvHeader"
                android:id="@+id/cv_nutrients_hd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_name">

                <android.support.constraint.ConstraintLayout
                    style="@style/ClData">

                    <TextView
                        style="@style/TvHeader"
                        android:id="@+id/tv_nutrients"
                        android:text="@string/hd_pd_nutrient"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/CvData"
                android:id="@+id/cv_nutrients"
                app:layout_constraintTop_toBottomOf="@+id/cv_nutrients_hd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <android.support.constraint.ConstraintLayout
                    style="@style/ClData">

                    <android.support.design.widget.TextInputLayout
                        style="@style/TilDefault"
                        android:id="@+id/til_carbohydrates"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <android.support.design.widget.TextInputEditText
                            style="@style/EtNutrients"
                            android:id="@+id/et_carbohydrates"
                            android:hint="@string/ct_carbohydrates"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/TilDefault"
                        android:id="@+id/til_protein"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/til_carbohydrates">

                        <android.support.design.widget.TextInputEditText
                            style="@style/EtNutrients"
                            android:id="@+id/et_protein"
                            android:hint="@string/ct_protein"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/TilDefault"
                        android:id="@+id/til_fat"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/til_protein">

                        <android.support.design.widget.TextInputEditText
                            style="@style/EtNutrients"
                            android:id="@+id/et_fat"
                            android:hint="@string/ct_fat"/>
                    </android.support.design.widget.TextInputLayout>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        style="@style/FabDefault"
        android:id="@+id/fab_finished"
        android:src="@drawable/ic_ot_finished"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>