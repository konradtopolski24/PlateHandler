<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BothMatch"
    tools:context=".fragments.shopping.ShowShoppingFragment">

    <android.support.constraint.ConstraintLayout
        style="@style/WidthMatch">

        <android.support.v7.widget.CardView
            style="@style/CvHeader"
            android:id="@+id/cv_info_hd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                style="@style/ClData">

                <TextView
                    style="@style/TvHeader"
                    android:id="@+id/tv_info"
                    android:text="@string/hd_sh_info"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iv_info"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    style="@style/IvHeader"
                    android:id="@+id/iv_info"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_info"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_info"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CvData"
            android:id="@+id/cv_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_info_hd">

            <android.support.constraint.ConstraintLayout
                style="@style/ClData">

                <!-- 1st level -->

                <ImageView
                    style="@style/IvInfoShopping"
                    android:id="@+id/iv_date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_date_hd"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    style="@style/TvInfo"
                    android:id="@+id/tv_date_hd"
                    android:text="@string/ct_date"
                    app:layout_constraintStart_toEndOf="@+id/iv_date"
                    app:layout_constraintEnd_toStartOf="@+id/iv_state"
                    app:layout_constraintTop_toTopOf="@+id/iv_date"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_date"
                    app:layout_constraintHorizontal_weight="1"/>

                <ImageView
                    style="@style/IvInfoShopping"
                    android:id="@+id/iv_state"
                    app:layout_constraintStart_toEndOf="@+id/tv_date_hd"
                    app:layout_constraintEnd_toStartOf="@+id/tv_state_hd"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    style="@style/TvInfo"
                    android:id="@+id/tv_state_hd"
                    android:text="@string/ct_state"
                    app:layout_constraintStart_toEndOf="@+id/iv_state"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_state"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_state"
                    app:layout_constraintHorizontal_weight="1"/>

                <TextView
                    style="@style/WidthZero"
                    android:id="@+id/tv_date"
                    app:layout_constraintStart_toStartOf="@+id/tv_date_hd"
                    app:layout_constraintEnd_toEndOf="@+id/tv_date_hd"
                    app:layout_constraintTop_toBottomOf="@+id/tv_date_hd"/>

                <TextView
                    style="@style/WidthZero"
                    android:id="@+id/tv_state"
                    app:layout_constraintStart_toStartOf="@+id/tv_state_hd"
                    app:layout_constraintEnd_toEndOf="@+id/tv_state_hd"
                    app:layout_constraintTop_toBottomOf="@+id/tv_state_hd"/>

                <!-- 2nd level -->

                <Button
                    style="@style/BtDefault"
                    android:id="@+id/bt_create"
                    android:text="@string/bt_shopping"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_state"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CvHeader"
            android:id="@+id/cv_list_hd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_info">

            <android.support.constraint.ConstraintLayout
                style="@style/ClData">

                <TextView
                    style="@style/TvHeader"
                    android:id="@+id/tv_list"
                    android:text="@string/hd_sh_list"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iv_list"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    style="@style/IvHeader"
                    android:id="@+id/iv_list"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_list"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_list"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CvData"
            android:id="@+id/cv_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_list_hd"
            app:layout_constraintBottom_toBottomOf="parent">

            <android.support.constraint.ConstraintLayout
                style="@style/ClData">

                <android.support.v7.widget.RecyclerView
                    style="@style/RvDefault"
                    android:id="@+id/rv_shopping"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    style="@style/TvEmpty"
                    android:id="@+id/tv_empty"
                    android:text="@string/ep_shopping"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
</ScrollView>