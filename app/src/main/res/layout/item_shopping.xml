<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ClShopping">

    <ImageView
        style="@style/IvInfo"
        android:id="@+id/iv_dot"
        android:src="@drawable/ic_sl_dot"
        android:contentDescription="@string/dp_dot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/TvShopping"
        android:id="@+id/tv_item"
        app:layout_constraintStart_toEndOf="@+id/iv_dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_dot"
        app:layout_constraintBottom_toBottomOf="@+id/iv_dot" />
</androidx.constraintlayout.widget.ConstraintLayout>