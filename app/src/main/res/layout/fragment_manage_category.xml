<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BothMatch"
    tools:context=".fragments.recipe.manage.ManageCategoryFragment">

    <ScrollView
        style="@style/BothMatch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout
            style="@style/WidthMatch">

            <android.support.v7.widget.CardView
                style="@style/CvHeader"
                android:id="@+id/cv_name_hd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.ConstraintLayout
                    style="@style/ClHeader">

                    <TextView
                        style="@style/TvHeader"
                        android:id="@+id/tv_name"
                        android:text="@string/tv_add_name"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/CvData"
                android:id="@+id/cv_name"
                app:layout_constraintTop_toBottomOf="@+id/cv_name_hd"
                app:layout_constraintStart_toStartOf="parent">

                <android.support.constraint.ConstraintLayout
                    style="@style/ClData">

                    <android.support.design.widget.TextInputLayout
                        style="@style/TilDefault"
                        android:id="@+id/til_name"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <android.support.design.widget.TextInputEditText
                            style="@style/EtDefault"
                            android:id="@+id/et_name"
                            android:hint="@string/et_name"/>
                    </android.support.design.widget.TextInputLayout>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/CvHeader"
                android:id="@+id/cv_add_hd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_name">

                <android.support.constraint.ConstraintLayout
                    style="@style/ClHeader">

                    <TextView
                        style="@style/TvHeader"
                        android:id="@+id/tv_add"
                        android:text="@string/tv_add_shopping"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/CvData"
                android:id="@+id/cv_add"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_add_hd"
                app:layout_constraintBottom_toBottomOf="parent">

                <android.support.constraint.ConstraintLayout
                    style="@style/ClData">

                    <Button
                        style="@style/BtAlone"
                        android:id="@+id/bt_add"
                        android:text="@string/bt_add"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <android.support.v7.widget.RecyclerView
                        style="@style/RvDefault"
                        android:id="@+id/rv_ingredients"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bt_add"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        style="@style/FabDefault"
        android:id="@+id/fab_finished"
        android:src="@drawable/ic_finished"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>