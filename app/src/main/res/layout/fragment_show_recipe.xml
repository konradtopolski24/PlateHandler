<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.recipe.ShowRecipeFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Photo -->

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/iv_photo_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Favorite -->

        <Switch
            android:id="@+id/sw_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_photo"/>

        <!-- Calculate -->

        <Button
            android:id="@+id/bt_calculate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sw_favorite" />

        <!-- Name -->

        <TextView
            android:id="@+id/tv_name_hd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/et_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_calculate" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_hd" />

        <!-- Author -->

        <TextView
            android:id="@+id/tv_author_hd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/et_author"
            app:layout_constraintStart_toStartOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_author_hd" />

        <!-- Serving -->

        <TextView
            android:id="@+id/tv_serving_hd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/et_serving"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_author" />

        <TextView
            android:id="@+id/tv_serving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_serving_hd"/>

        <!-- Time -->

        <TextView
            android:id="@+id/tv_time_hd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_serving" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_time_hd" />

        <!-- Difficulty -->

        <TextView
            android:id="@+id/tv_difficulty_hd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_difficulty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_time" />

        <TextView
            android:id="@+id/tv_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_difficulty_hd" />

        <!-- Spiciness -->

        <TextView
            android:id="@+id/tv_spiciness_hd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_spiciness"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_difficulty"/>

        <ImageView
            android:id="@+id/iv_spiciness0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_spiciness"
            android:visibility="gone"
            android:contentDescription="@string/iv_spiciness_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_spiciness_hd"/>

        <ImageView
            android:id="@+id/iv_spiciness1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_spiciness"
            android:visibility="gone"
            android:contentDescription="@string/iv_spiciness_desc"
            app:layout_constraintStart_toEndOf="@+id/iv_spiciness0"
            app:layout_constraintTop_toBottomOf="@+id/tv_spiciness_hd"/>

        <ImageView
            android:id="@+id/iv_spiciness2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_spiciness"
            android:visibility="gone"
            android:contentDescription="@string/iv_spiciness_desc"
            app:layout_constraintStart_toEndOf="@+id/iv_spiciness1"
            app:layout_constraintTop_toBottomOf="@+id/tv_spiciness_hd" />

        <!-- Country -->

        <TextView
            android:id="@+id/tv_country_hd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_country"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_spiciness0" />

        <TextView
            android:id="@+id/tv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_country_hd" />

        <!-- Type -->

        <TextView
            android:id="@+id/tv_type_hd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_country"  />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_type_hd" />

        <!-- Preference -->

        <TextView
            android:id="@+id/tv_preference_hd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_preferences"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_type" />

        <TextView
            android:id="@+id/tv_preferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_preference_hd"/>

        <!-- Categories -->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_preferences"/>

        <!-- Steps -->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_categories"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>