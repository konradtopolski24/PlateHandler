<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BothMatch"
    tools:context=".fragments.recipe.ShowRecipeFragment">

    <android.support.constraint.ConstraintLayout
        style="@style/WidthMatch">

        <ProgressBar
            style="@style/PbDefault"
            android:id="@+id/pb_loading"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <android.support.v7.widget.CardView
            style="@style/CvHeader"
            android:id="@+id/cv_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <android.support.constraint.ConstraintLayout
                style="@style/ClData">

                <ImageView
                    style="@style/IvPhoto"
                    android:id="@+id/iv_photo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    style="@style/TvName"
                    android:id="@+id/tv_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_photo" />

                <TextView
                    style="@style/TvAuthor"
                    android:id="@+id/tv_author"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/cb_favorite"
                    app:layout_constraintTop_toTopOf="@+id/cb_favorite"
                    app:layout_constraintBottom_toBottomOf="@+id/cb_favorite" />

                <CheckBox
                    style="@style/BothWrap"
                    android:id="@+id/cb_favorite"
                    android:button="@drawable/cb_favorite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CvHeader"
            android:id="@+id/cv_info_hd"
            app:layout_constraintTop_toBottomOf="@+id/cv_header"
            app:layout_constraintStart_toStartOf="parent">

            <android.support.constraint.ConstraintLayout
                style="@style/ClData">

                <TextView
                    style="@style/TvHeader"
                    android:id="@+id/tv_info"
                    android:text="@string/hd_rp_info"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iv_info"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    style="@style/IvHeader"
                    android:id="@+id/iv_info"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_info"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_info"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CvData"
            android:id="@+id/cv_info"
            app:layout_constraintTop_toBottomOf="@+id/cv_info_hd"
            app:layout_constraintStart_toStartOf="parent">

            <android.support.constraint.ConstraintLayout
                style="@style/ClData">

                <!-- 1st level -->

                <ImageView
                    style="@style/IvInfoRecipe"
                    android:id="@+id/iv_serving"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_serving_hd"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    style="@style/TvInfo"
                    android:id="@+id/tv_serving_hd"
                    android:text="@string/ct_serving"
                    app:layout_constraintStart_toEndOf="@+id/iv_serving"
                    app:layout_constraintEnd_toStartOf="@+id/iv_time"
                    app:layout_constraintTop_toTopOf="@+id/iv_serving"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_serving"
                    app:layout_constraintHorizontal_weight="1"/>

                <ImageView
                    style="@style/IvInfoRecipe"
                    android:id="@+id/iv_time"
                    app:layout_constraintStart_toEndOf="@+id/tv_serving_hd"
                    app:layout_constraintEnd_toStartOf="@+id/tv_time_hd"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    style="@style/TvInfo"
                    android:id="@+id/tv_time_hd"
                    android:text="@string/ct_time"
                    app:layout_constraintStart_toEndOf="@+id/iv_time"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_time"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_time"
                    app:layout_constraintHorizontal_weight="1"/>

                <TextView
                    style="@style/WidthZero"
                    android:id="@+id/tv_serving"
                    app:layout_constraintStart_toStartOf="@+id/tv_serving_hd"
                    app:layout_constraintEnd_toEndOf="@+id/tv_serving_hd"
                    app:layout_constraintTop_toBottomOf="@+id/tv_serving_hd"/>

                <TextView
                    style="@style/WidthZero"
                    android:id="@+id/tv_time"
                    app:layout_constraintStart_toStartOf="@+id/tv_time_hd"
                    app:layout_constraintEnd_toEndOf="@+id/tv_time_hd"
                    app:layout_constraintTop_toBottomOf="@+id/tv_time_hd"/>

                <View
                    style="@style/VwLine"
                    android:id="@+id/vw_line1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_time"/>

                <!-- 2nd level -->

                <ImageView
                    style="@style/IvInfoRecipe"
                    android:id="@+id/iv_difficulty"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_difficulty_hd"
                    app:layout_constraintTop_toBottomOf="@+id/vw_line1"/>

                <TextView
                    style="@style/TvInfo"
                    android:id="@+id/tv_difficulty_hd"
                    android:text="@string/ct_difficulty"
                    app:layout_constraintStart_toEndOf="@+id/iv_difficulty"
                    app:layout_constraintEnd_toStartOf="@+id/iv_spiciness"
                    app:layout_constraintTop_toTopOf="@+id/iv_difficulty"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_difficulty"
                    app:layout_constraintHorizontal_weight="1"/>

                <ImageView
                    style="@style/IvInfoRecipe"
                    android:id="@+id/iv_spiciness"
                    app:layout_constraintStart_toEndOf="@+id/tv_difficulty_hd"
                    app:layout_constraintEnd_toStartOf="@+id/tv_spiciness_hd"
                    app:layout_constraintTop_toBottomOf="@+id/vw_line1"/>

                <TextView
                    style="@style/TvInfo"
                    android:id="@+id/tv_spiciness_hd"
                    android:text="@string/ct_spiciness"
                    app:layout_constraintStart_toEndOf="@+id/iv_spiciness"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_spiciness"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_spiciness"
                    app:layout_constraintHorizontal_weight="1"/>

                <TextView
                    style="@style/WidthZero"
                    android:id="@+id/tv_difficulty"
                    app:layout_constraintStart_toStartOf="@+id/tv_difficulty_hd"
                    app:layout_constraintEnd_toEndOf="@+id/tv_difficulty_hd"
                    app:layout_constraintTop_toBottomOf="@+id/tv_difficulty_hd"/>

                <ImageView
                    style="@style/IvSpiciness"
                    android:id="@+id/iv_spiciness0"
                    app:layout_constraintStart_toStartOf="@+id/tv_spiciness_hd"
                    app:layout_constraintTop_toBottomOf="@+id/tv_spiciness_hd" />

                <ImageView
                    style="@style/IvSpiciness"
                    android:id="@+id/iv_spiciness1"
                    app:layout_constraintStart_toEndOf="@+id/iv_spiciness0"
                    app:layout_constraintTop_toBottomOf="@+id/tv_spiciness_hd"/>

                <ImageView
                    style="@style/IvSpiciness"
                    android:id="@+id/iv_spiciness2"
                    app:layout_constraintStart_toEndOf="@+id/iv_spiciness1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_spiciness_hd" />

                <ImageView
                    style="@style/IvSpiciness"
                    android:id="@+id/iv_spiciness3"
                    app:layout_constraintStart_toEndOf="@+id/iv_spiciness2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_spiciness_hd" />

                <View
                    style="@style/VwLine"
                    android:id="@+id/vw_line2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_spiciness0"/>

                <!-- 3rd level -->

                <ImageView
                    style="@style/IvInfoRecipe"
                    android:id="@+id/iv_country"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_country_hd"
                    app:layout_constraintTop_toBottomOf="@+id/vw_line2"/>

                <TextView
                    style="@style/TvInfo"
                    android:id="@+id/tv_country_hd"
                    android:text="@string/ct_country"
                    app:layout_constraintStart_toEndOf="@+id/iv_country"
                    app:layout_constraintEnd_toStartOf="@+id/iv_type"
                    app:layout_constraintTop_toTopOf="@+id/iv_country"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_country"
                    app:layout_constraintHorizontal_weight="1"/>

                <ImageView
                    style="@style/IvInfoRecipe"
                    android:id="@+id/iv_type"
                    app:layout_constraintStart_toEndOf="@+id/tv_country_hd"
                    app:layout_constraintEnd_toStartOf="@+id/tv_type_hd"
                    app:layout_constraintTop_toBottomOf="@+id/vw_line2"/>

                <TextView
                    style="@style/TvInfo"
                    android:id="@+id/tv_type_hd"
                    android:text="@string/ct_type"
                    app:layout_constraintStart_toEndOf="@+id/iv_type"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_type"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_type"
                    app:layout_constraintHorizontal_weight="1"/>

                <TextView
                    style="@style/BothWrap"
                    android:id="@+id/tv_country"
                    app:layout_constraintStart_toStartOf="@+id/tv_country_hd"
                    app:layout_constraintEnd_toStartOf="@+id/iv_country_dw"
                    app:layout_constraintTop_toTopOf="@+id/iv_country_dw"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_country_dw"/>

                <ImageView
                    style="@style/IvStretch"
                    android:id="@+id/iv_country_dw"
                    app:layout_constraintStart_toEndOf="@+id/tv_country"
                    app:layout_constraintEnd_toEndOf="@+id/tv_country_hd"
                    app:layout_constraintTop_toBottomOf="@+id/tv_country_hd"/>

                <TextView
                    style="@style/BothWrap"
                    android:id="@+id/tv_type"
                    app:layout_constraintStart_toStartOf="@+id/tv_type_hd"
                    app:layout_constraintEnd_toStartOf="@+id/iv_type_dw"
                    app:layout_constraintTop_toTopOf="@+id/iv_type_dw"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_type_dw"/>

                <ImageView
                    style="@style/IvStretch"
                    android:id="@+id/iv_type_dw"
                    app:layout_constraintStart_toEndOf="@+id/tv_type"
                    app:layout_constraintEnd_toEndOf="@+id/tv_type_hd"
                    app:layout_constraintTop_toBottomOf="@+id/tv_type_hd"/>

                <View
                    style="@style/VwLine"
                    android:id="@+id/vw_line3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_country_dw"/>

                <!-- 4th level -->

                <ImageView
                    style="@style/IvInfoRecipe"
                    android:id="@+id/iv_preference"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_preference_hd"
                    app:layout_constraintTop_toBottomOf="@+id/vw_line3"/>

                <TextView
                    style="@style/TvInfo"
                    android:id="@+id/tv_preference_hd"
                    android:text="@string/ct_preference"
                    app:layout_constraintStart_toEndOf="@+id/iv_preference"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_preference"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_preference"
                    app:layout_constraintHorizontal_weight="1"/>

                <TextView
                    style="@style/BothWrap"
                    android:id="@+id/tv_preference"
                    app:layout_constraintStart_toStartOf="@+id/tv_preference_hd"
                    app:layout_constraintEnd_toStartOf="@+id/iv_preference_dw"
                    app:layout_constraintTop_toTopOf="@+id/iv_preference_dw"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_preference_dw"/>

                <ImageView
                    style="@style/IvStretch"
                    android:id="@+id/iv_preference_dw"
                    app:layout_constraintStart_toEndOf="@+id/tv_preference"
                    app:layout_constraintEnd_toEndOf="@+id/tv_preference_hd"
                    app:layout_constraintTop_toBottomOf="@+id/tv_preference_hd"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CvHeader"
            android:id="@+id/cv_categories_hd"
            app:layout_constraintTop_toBottomOf="@+id/cv_info"
            app:layout_constraintStart_toStartOf="parent">

            <android.support.constraint.ConstraintLayout
                style="@style/ClData">

                <TextView
                    style="@style/TvHeader"
                    android:id="@+id/tv_categories"
                    android:text="@string/hd_rp_ingredient"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iv_categories"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    style="@style/IvHeader"
                    android:id="@+id/iv_categories"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_categories"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_categories"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CvData"
            android:id="@+id/cv_categories"
            app:layout_constraintTop_toBottomOf="@+id/cv_categories_hd"
            app:layout_constraintStart_toStartOf="parent">

            <android.support.constraint.ConstraintLayout
                style="@style/ClData">

                <android.support.v7.widget.RecyclerView
                    style="@style/RvDefault"
                    android:id="@+id/rv_categories"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CvHeader"
            android:id="@+id/cv_steps_hd"
            app:layout_constraintTop_toBottomOf="@+id/cv_categories"
            app:layout_constraintStart_toStartOf="parent">

            <android.support.constraint.ConstraintLayout
                style="@style/ClData">

                <TextView
                    style="@style/TvHeader"
                    android:id="@+id/tv_steps"
                    android:text="@string/hd_rp_step"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/iv_steps"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    style="@style/IvHeader"
                    android:id="@+id/iv_steps"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_steps"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_steps"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/CvData"
            android:id="@+id/cv_steps"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_steps_hd"
            app:layout_constraintBottom_toBottomOf="parent">

            <android.support.constraint.ConstraintLayout
                style="@style/ClData">

                <android.support.v7.widget.RecyclerView
                    style="@style/RvDefault"
                    android:id="@+id/rv_steps"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
</ScrollView>