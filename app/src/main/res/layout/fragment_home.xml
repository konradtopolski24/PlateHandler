<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BothMatch"
    tools:context=".fragments.recipe.RecipeShowFragment">

    <androidx.constraintlayout.widget.ConstraintLayout style="@style/ClMain">

        <ImageView
            android:id="@+id/iv_logo"
            style="@style/IvLogo"
            android:contentDescription="@string/dp_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_hd_statistics"
            style="@style/CvHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_logo">

            <androidx.constraintlayout.widget.ConstraintLayout style="@style/ClData">

                <ImageView
                    android:id="@+id/iv_tt_statistics"
                    style="@style/IvTutorial"
                    android:contentDescription="@string/dp_tutorial"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_hd_statistics"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_hd_statistics" />

                <TextView
                    android:id="@+id/tv_hd_statistics"
                    style="@style/TvHeader"
                    android:text="@string/hd_hm_statistics"
                    app:layout_constraintEnd_toStartOf="@+id/iv_hd_statistics"
                    app:layout_constraintStart_toEndOf="@+id/iv_tt_statistics"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_hd_statistics"
                    style="@style/IvHeader"
                    android:contentDescription="@string/dp_expand"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_hd_statistics"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_hd_statistics" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_statistics"
            style="@style/CvData"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_hd_statistics">

            <androidx.constraintlayout.widget.ConstraintLayout style="@style/ClData">

                <ImageView
                    android:id="@+id/iv_ct_recipe"
                    style="@style/IvInfoHome"
                    android:contentDescription="@string/dp_caption"
                    app:layout_constraintEnd_toStartOf="@+id/tv_ct_recipe"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_ct_recipe"
                    style="@style/TvCaption"
                    android:text="@string/ct_recipes"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_ct_recipe"
                    app:layout_constraintEnd_toStartOf="@+id/iv_ct_product"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/iv_ct_recipe"
                    app:layout_constraintTop_toTopOf="@+id/iv_ct_recipe" />

                <ImageView
                    android:id="@+id/iv_ct_product"
                    style="@style/IvInfoHome"
                    android:contentDescription="@string/dp_caption"
                    app:layout_constraintEnd_toStartOf="@+id/tv_ct_product"
                    app:layout_constraintStart_toEndOf="@+id/tv_ct_recipe"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_ct_product"
                    style="@style/TvCaption"
                    android:text="@string/ct_products"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_ct_product"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/iv_ct_product"
                    app:layout_constraintTop_toTopOf="@+id/iv_ct_product" />

                <TextView
                    android:id="@+id/tv_recipe"
                    style="@style/TvPrimary"
                    app:layout_constraintEnd_toEndOf="@+id/tv_ct_recipe"
                    app:layout_constraintStart_toStartOf="@+id/tv_ct_recipe"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ct_recipe" />

                <TextView
                    android:id="@+id/tv_product"
                    style="@style/TvPrimary"
                    app:layout_constraintEnd_toEndOf="@+id/tv_ct_product"
                    app:layout_constraintStart_toStartOf="@+id/tv_ct_product"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ct_product" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_hd_recent"
            style="@style/CvHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_statistics">

            <androidx.constraintlayout.widget.ConstraintLayout style="@style/ClData">

                <ImageView
                    android:id="@+id/iv_tt_recent"
                    style="@style/IvTutorial"
                    android:contentDescription="@string/dp_tutorial"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_hd_recent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_hd_recent" />

                <TextView
                    android:id="@+id/tv_hd_recent"
                    style="@style/TvHeader"
                    android:text="@string/hd_hm_recent"
                    app:layout_constraintEnd_toStartOf="@+id/iv_hd_recent"
                    app:layout_constraintStart_toEndOf="@+id/iv_tt_recent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_hd_recent"
                    style="@style/IvHeader"
                    android:contentDescription="@string/dp_expand"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_hd_recent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_hd_recent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_recent"
            style="@style/CvData"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_hd_recent">

            <androidx.constraintlayout.widget.ConstraintLayout style="@style/ClRv">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_recent"
                    style="@style/WidthMatch"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_empty"
                    style="@style/TvEmpty"
                    android:text="@string/ep_recent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>