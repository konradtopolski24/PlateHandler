<resources>

    <!-- Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pr_normal</item>
        <item name="colorPrimaryDark">@color/pr_dark</item>
        <item name="colorAccent">@color/ac_normal</item>
        <item name="android:colorBackground">@color/bg_gray</item>
    </style>

    <!-- Base -->
    <style name="BothWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BothMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WidthMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HeightMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WidthZero">
        <item name="android:layout_width">@dimen/df_zero</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HeightZero">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/df_zero</item>
    </style>

    <style name="BothZero">
        <item name="android:layout_width">@dimen/df_zero</item>
        <item name="android:layout_height">@dimen/df_zero</item>
    </style>

    <!-- View -->
    <style name="VwLine">
        <item name="android:layout_width">@dimen/df_zero</item>
        <item name="android:layout_height">@dimen/ht_line</item>
        <item name="android:layout_marginTop">@dimen/mg_big</item>
        <item name="android:background">@color/bg_gray</item>
    </style>

    <!-- CardView -->
    <style name="CvData" parent="WidthMatch">
        <item name="cardCornerRadius">@dimen/rd_big</item>
        <item name="cardElevation">@dimen/df_zero</item>
        <item name="cardBackgroundColor">@color/tv_white</item>
    </style>

    <style name="CvHeader" parent="WidthMatch">
        <item name="android:layout_marginTop">@dimen/mg_huge</item>
        <item name="cardCornerRadius">@dimen/rd_big</item>
        <item name="cardElevation">@dimen/df_zero</item>
        <item name="cardBackgroundColor">@color/pr_normal</item>
    </style>

    <style name="CvItem" parent="WidthMatch">
        <item name="android:layout_margin">@dimen/mg_huge</item>
        <item name="cardCornerRadius">@dimen/rd_small</item>
        <item name="cardElevation">@dimen/df_zero</item>
    </style>

    <style name="CvChoose" parent="WidthMatch">
        <item name="android:layout_margin">@dimen/mg_big</item>
        <item name="cardCornerRadius">@dimen/rd_big</item>
        <item name="cardElevation">@dimen/df_zero</item>
        <item name="cardBackgroundColor">@color/pr_normal</item>
    </style>

    <!-- ConstraintLayout -->
    <style name="ClMain" parent="WidthMatch">
        <item name="android:paddingStart">@dimen/mg_huge</item>
        <item name="android:paddingEnd">@dimen/mg_huge</item>
        <item name="android:paddingBottom">@dimen/mg_huge</item>
    </style>

    <style name="ClFab" parent="WidthMatch">
        <item name="android:paddingStart">@dimen/mg_huge</item>
        <item name="android:paddingEnd">@dimen/mg_huge</item>
        <item name="android:paddingBottom">@dimen/mg_enormous</item>
    </style>

    <style name="ClData" parent="WidthMatch">
        <item name="android:layout_margin">@dimen/mg_huge</item>
    </style>

    <style name="ClRv" parent="WidthMatch">
        <item name="android:layout_marginRight">@dimen/mg_huge</item>
        <item name="android:layout_marginLeft">@dimen/mg_huge</item>
    </style>

    <style name="ClItem" parent="WidthMatch">
        <item name="android:background">@drawable/bg_item</item>
    </style>

    <style name="ClShopping" parent="WidthMatch">
        <item name="android:layout_margin">@dimen/mg_small</item>
    </style>

    <style name="LlSide" parent="HeightZero">
        <item name="android:padding">@dimen/mg_big</item>
        <item name="android:background">@color/pr_normal</item>
    </style>

    <!-- TextView -->
    <style name="TvPrimary" parent="WidthZero">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">2</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="TvHeader" parent="TvPrimary">
        <item name="android:layout_marginStart">@dimen/mg_big</item>
        <item name="android:layout_marginEnd">@dimen/mg_big</item>
        <item name="android:textSize">@dimen/tx_big</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tv_white</item>
    </style>

    <style name="TvName" parent="TvPrimary">
        <item name="android:layout_marginTop">@dimen/mg_medium</item>
        <item name="android:textSize">@dimen/tx_huge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tv_white</item>
    </style>

    <style name="TvChoose" parent="TvPrimary">
        <item name="android:layout_marginTop">@dimen/mg_big</item>
        <item name="android:textSize">@dimen/tx_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tv_white</item>

    </style>

    <style name="TvUnder" parent="TvPrimary">
        <item name="android:textColor">@color/tv_white</item>
        <item name="android:textSize">@dimen/tx_small</item>
    </style>

    <style name="TvCaption" parent="TvPrimary">
        <item name="android:textSize">@dimen/tx_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TvItem" parent="TvPrimary">
        <item name="android:layout_marginTop">@dimen/mg_big</item>
        <item name="android:layout_marginStart">@dimen/mg_big</item>
        <item name="android:layout_marginEnd">@dimen/mg_big</item>
        <item name="android:textSize">@dimen/tx_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TvMeasure" parent="TvPrimary">
        <item name="android:layout_marginStart">@dimen/mg_small</item>
    </style>

    <style name="TvCalories" parent="TvPrimary">
        <item name="android:layout_marginEnd">@dimen/mg_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TvSide" parent="TvPrimary">
        <item name="android:padding">@dimen/mg_big</item>
        <item name="android:background">@drawable/bg_step</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/tv_white</item>
        <item name="android:textSize">@dimen/tx_huge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TvSpinner" parent="TvPrimary">
        <item name="android:layout_marginStart">@dimen/mg_small</item>
    </style>

    <style name="TvStep" parent="WidthZero">
        <item name="android:layout_margin">@dimen/mg_huge</item>
        <item name="android:textSize">@dimen/tx_small</item>
    </style>

    <style name="TvCredits" parent="TvPrimary">
        <item name="android:layout_marginBottom">@dimen/mg_big</item>
    </style>

    <style name="TvShopping" parent="TvPrimary">
        <item name="android:layout_marginStart">@dimen/mg_medium</item>
        <item name="android:layout_marginEnd">@dimen/mg_medium</item>
        <item name="android:textSize">@dimen/tx_big</item>
    </style>

    <style name="TvTiny" parent="TvPrimary">
        <item name="android:layout_marginStart">@dimen/mg_tiny</item>
        <item name="android:layout_marginEnd">@dimen/mg_tiny</item>
        <item name="android:textSize">@dimen/tx_tiny</item>
    </style>

    <style name="TvTutorial" parent="WidthZero">
        <item name="android:layout_marginTop">@dimen/mg_big</item>
        <item name="android:layout_marginStart">@dimen/mg_huge</item>
        <item name="android:layout_marginEnd">@dimen/mg_huge</item>
        <item name="android:textSize">@dimen/tx_medium</item>
    </style>

    <style name="TvDone" parent="BothWrap">
        <item name="android:layout_margin">@dimen/mg_big</item>
        <item name="android:textSize">@dimen/tx_enormous</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
        <item name="android:text">@string/fn_step</item>
        <item name="android:textColor">@color/pr_normal</item>
    </style>

    <style name="TvUsed" parent="BothWrap">
        <item name="android:layout_margin">@dimen/mg_big</item>
        <item name="android:textSize">@dimen/tx_huge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
        <item name="android:text">@string/fn_ingredient</item>
        <item name="android:textColor">@color/pr_normal</item>
    </style>

    <style name="TvNo" parent="BothWrap">
        <item name="android:layout_margin">@dimen/mg_tiny</item>
        <item name="android:textSize">@dimen/tx_tiny</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TvEmpty" parent="BothWrap">
        <item name="android:layout_margin">@dimen/mg_huge</item>
        <item name="android:textSize">@dimen/tx_huge</item>
    </style>

    <style name="TvDropdown" parent="BothWrap">
        <item name="android:layout_margin">@dimen/mg_big</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- ImageView -->
    <style name="IvPrimary" parent="BothWrap">
        <item name="android:layout_width">@dimen/ic_small</item>
        <item name="android:layout_height">@dimen/ic_small</item>
    </style>

    <style name="IvHeader" parent="IvPrimary">
        <item name="android:src">@drawable/ic_ot_expand</item>
    </style>

    <style name="IvTutorial" parent="IvPrimary">
        <item name="android:src">@drawable/ic_ot_tutorial</item>
    </style>

    <style name="IvInfo" parent="IvPrimary">
        <item name="android:layout_marginTop">@dimen/mg_medium</item>
        <item name="android:layout_marginStart">@dimen/mg_medium</item>
        <item name="android:layout_marginEnd">@dimen/mg_medium</item>
    </style>

    <style name="IvInfoHome" parent="IvInfo">
        <item name="android:src">@drawable/ic_dl_home</item>
    </style>

    <style name="IvInfoRecipe" parent="IvInfo">
        <item name="android:src">@drawable/ic_dl_recipe</item>
    </style>

    <style name="IvInfoProduct" parent="IvInfo">
        <item name="android:src">@drawable/ic_dl_product</item>
    </style>

    <style name="IvInfoShopping" parent="IvInfo">
        <item name="android:src">@drawable/ic_dl_shopping</item>
    </style>

    <style name="IvInfoExport" parent="IvInfo">
        <item name="android:src">@drawable/ic_dl_export</item>
    </style>

    <style name="IvInfoCredits" parent="IvInfo">
        <item name="android:src">@drawable/ic_dl_credits</item>
    </style>

    <style name="IvItem" parent="IvPrimary">
        <item name="android:layout_marginTop">@dimen/mg_small</item>
        <item name="android:layout_marginStart">@dimen/mg_big</item>
        <item name="android:layout_marginBottom">@dimen/mg_big</item>
    </style>

    <style name="IvPhoto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ht_photo</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="IvSpiciness" parent="IvPrimary">
        <item name="android:layout_marginTop">@dimen/mg_small</item>
        <item name="android:layout_marginStart">@dimen/mg_small</item>
        <item name="android:layout_marginEnd">@dimen/mg_small</item>
        <item name="android:src">@drawable/ic_sp_hot</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="IvSide">
        <item name="android:layout_width">@dimen/ic_medium</item>
        <item name="android:layout_height">@dimen/ic_medium</item>
        <item name="android:tint">@color/tv_white</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="IvChoose">
        <item name="android:layout_width">@dimen/ic_big</item>
        <item name="android:layout_height">@dimen/ic_big</item>
        <item name="android:tint">@color/tv_white</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="IvClose" parent="IvPrimary">
        <item name="android:src">@drawable/ic_ot_close</item>
        <item name="android:layout_marginEnd">@dimen/mg_medium</item>
    </style>

    <style name="IvType" parent="IvPrimary">
        <item name="android:tint">@color/tv_white</item>
    </style>

    <!-- ProgressBar -->
    <style name="PbDefault" parent="BothWrap">
        <item name="android:visibility">gone</item>
    </style>

    <!-- ImageButton -->
    <style name="IbDefault" parent="BothWrap">
        <item name="android:layout_marginStart">@dimen/mg_medium</item>
        <item name="android:layout_marginEnd">@dimen/mg_medium</item>
    </style>

    <!-- CheckBox -->
    <style name="CbDone" parent="BothWrap">
        <item name="android:layout_marginTop">@dimen/mg_medium</item>
        <item name="android:layout_marginEnd">@dimen/mg_medium</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- BarChart -->
    <style name="BcDefault">
        <item name="android:layout_width">@dimen/df_zero</item>
        <item name="android:layout_height">@dimen/ht_bc</item>
        <item name="android:layout_marginTop">@dimen/mg_huge</item>
    </style>

    <!-- PieChart -->
    <style name="PcDefault">
        <item name="android:layout_width">@dimen/df_zero</item>
        <item name="android:layout_height">@dimen/ht_pc</item>
        <item name="android:layout_marginTop">@dimen/mg_huge</item>
    </style>

    <!-- TabLayout -->
    <style name="TlDefault" parent="WidthMatch">
        <item name="android:background">@color/pr_normal</item>
        <item name="tabSelectedTextColor">@color/tv_white</item>
    </style>

    <!-- FabDefault -->
    <style name="FabDefault" parent="BothWrap">
        <item name="android:layout_margin">@dimen/mg_big</item>
    </style>

    <!-- TextInputLayout -->
    <style name="TilDefault" parent="WidthZero">
        <item name="android:layout_marginTop">@dimen/mg_big</item>
    </style>

    <!-- EditText -->
    <style name="EtDefault" parent="WidthMatch">
        <item name="android:inputType">textCapSentences</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EtComposition" parent="WidthMatch">
        <item name="android:digits">0123456789.</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EtItemAmount" parent="WidthMatch">
        <item name="android:layout_marginStart">@dimen/mg_medium</item>
        <item name="android:layout_marginEnd">@dimen/mg_medium</item>
        <item name="android:digits">0123456789.</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EtItemName" parent="WidthMatch">
        <item name="android:layout_marginStart">@dimen/mg_medium</item>
        <item name="android:layout_marginEnd">@dimen/mg_medium</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EtStep" parent="WidthMatch">
        <item name="android:layout_marginStart">@dimen/mg_medium</item>
        <item name="android:layout_marginEnd">@dimen/mg_medium</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
    </style>

    <!-- RadioGroup -->
    <style name="RgDefault" parent="WidthZero">
        <item name="android:layout_marginTop">@dimen/mg_big</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- RadioButton -->
    <style name="RbDefault" parent="BothWrap">
        <item name="android:drawablePadding">@dimen/mg_medium</item>
    </style>

    <!-- SeekBar -->
    <style name="SbDefault" parent="WidthZero">
        <item name="android:layout_marginEnd">@dimen/mg_huge</item>
    </style>

    <!-- Spinner -->
    <style name="SpInvisible" parent="WidthZero">
        <item name="android:visibility">gone</item>
    </style>

    <!-- Button -->
    <style name="BtDefault" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">@dimen/df_zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/mg_big</item>
        <item name="android:layout_marginStart">@dimen/mg_big</item>
        <item name="android:layout_marginEnd">@dimen/mg_big</item>
    </style>

    <style name="BtAlone" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">@dimen/df_zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/mg_big</item>
        <item name="android:layout_marginEnd">@dimen/mg_big</item>
    </style>

    <!-- NavigationView -->
    <style name="NvDefault" parent="HeightMatch">
        <item name="android:layout_gravity">start</item>
        <item name="menu">@menu/nv_main</item>
    </style>

    <!-- Toolbar -->
    <style name="TbDefault" parent="WidthMatch">
        <item name="android:background">@color/pr_normal</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- RecyclerView -->
    <style name="RvChoose" parent="BothZero">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/mg_enormous</item>
    </style>
</resources>